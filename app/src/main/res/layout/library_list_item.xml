<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/libraryItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trailer_item_height"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:stateListAnimator="@anim/button_elevation" >

    <ImageView
        android:id="@+id/trailerArt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/DarkGray"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/nowPlayingIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:background="#000000"
        android:scaleType="center"
        android:src="@drawable/ic_connected_white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/trailerText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailer_item_text_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/trailer_text_background"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollHorizontally="true"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textColor="@color/default_list_item"
        android:textSize="14sp"/>

</RelativeLayout>
